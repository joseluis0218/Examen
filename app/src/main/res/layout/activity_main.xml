<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:id="@+id/empleado1"
        android:onClick="datosPersona1"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/label1"
                android:layout_width="10dp"
                android:layout_height="140dp"
                android:background="@color/colorPrimary">

            </FrameLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_picture1"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="20dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#F5F5F5"
                android:scaleType="centerCrop"
                android:layout_toEndOf="@+id/label1"
                android:src="@drawable/img_persona1"/>

            <TextView
                android:id="@+id/user_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:text="Linus Torvalds" />

            <TextView
                android:id="@+id/user_cargo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:text="Ingeniero de Sistemas" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/empleado2"
        android:onClick="datosPersona2"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/label2"
                android:layout_width="10dp"
                android:layout_height="140dp"
                android:background="@color/colorAccent">

            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_picture2"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="20dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#F5F5F5"
                android:scaleType="centerCrop"
                android:layout_toEndOf="@+id/label2"
                android:src="@drawable/img_persona2"
                />
            <TextView
                android:id="@+id/user_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:text="Steve Jobs" />

            <TextView
                android:id="@+id/user_cargo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:text="Cofundador de Apple.inc" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/empleado3"
        android:onClick="datosPersona3"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/label3"
                android:layout_width="10dp"
                android:layout_height="140dp"
                android:background="@android:color/holo_blue_dark">

            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_picture3"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="20dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#F5F5F5"
                android:scaleType="centerCrop"
                android:src="@drawable/img_persona3"
                android:layout_toEndOf="@+id/label3"/>

            <TextView
                android:id="@+id/user_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:text="Bill Gates" />

            <TextView
                android:id="@+id/user_cargo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:text="Cofundador de Microsoft" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>